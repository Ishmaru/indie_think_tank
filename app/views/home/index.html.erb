<div class="page-header blackbg">
  <h1>Indie Think Tank <small>"Connecting game ideas, to those who can make it happen!"</small></h1>
</div>
<div class="jumbotron">
  <div class="block round-edge blackbg">
    <h1><%= @game.title %></h1>
    <style>
      .jumbotron { background-image: url(<%= @game.media %>); }
    </style>
    <h4><%= @game.summary %></h4>
    <%= link_to "Read More!", game_path(@game), class: "btn btn-primary sort" %>
  </div>
</div>
<h3><%= link_to "Latest Games:", games_path , class: "blackbg" %></h3>
<br>
<div class="list-group-item">
<div class="row">
    <% @games.each do |game| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img src="<%= game.media %>" alt="<%= game.title %>">
        <div class="caption">
          <h3><%= link_to game.title,  game_path(game) %></h3>
          <p><%= game.summary %></p>
        </div>
      </div>
    </div>
    <% end %>
</div>
</div>
<h3><%= link_to "Latest Ideas:", ideas_path , class: "blackbg"%></h3>
<br>
<%= render 'ideas/list' %>
