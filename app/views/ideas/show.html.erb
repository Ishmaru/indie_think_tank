<h3><%= @idea.tag %></h3>

<br>
<p><%= @idea.description %></p>
<br>
<h4>Games made from idea:</h4>
<% @games.each do |game| %>
  <%= link_to "#{game.title}", idea_game_path(@idea, game)%>
<% end %>
<br>
<% if current_user %>
  <%= link_to "Make this a Game!", new_idea_game_path(@idea) %>
<% end %>
<% if session[:user_id] == @idea.user_id %>
  <%= link_to "Update Idea", edit_idea_path(@idea) %>
  <br>
  <%= link_to "Remove Idea", idea_path, method: :delete, data: {confirm: "Remove Game?"} %>
  <br>
  <%= link_to "Add a new idea!", new_idea_path %>
<% elsif current_user %>
  <%= link_to "Add your own idea!", new_idea_path %>
<% end %>
  <br>
